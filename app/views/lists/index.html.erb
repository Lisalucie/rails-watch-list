
<div class="list-card">
  <table>
    <thead>
      <tr>
        <th>Toutes mes listes</th>
        <th colspan="1"></th>
      </tr>
    </thead>
  <div class="info-list-card">
    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <% if list.photo.attached?  %>
            <td><%= cl_image_tag list.photo.key, class:"list-photo" %></td>
          <% end %>
            <td><%= list.name %></td>
            <td></td>
            <td><%= link_to 'Show',list, class: "btn btn-dark" %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
  </table>
</div>
<div class="footer">
  <br>
  <%= link_to 'Add a list',new_list_path, class: "btn btn-dark" %>
</div>
